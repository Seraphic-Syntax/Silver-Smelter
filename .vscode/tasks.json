{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": ["CMake: Configure"]
        },
        {
            "label": "Run Miner",
            "type": "shell",
            "command": "${workspaceFolder}/build/silver_smelter",
            "args": [
                "--url", "stratum+tcp://stratum.braiins.com:3333",
                "--user", "Seraphic-Syntax.worker1"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": ["CMake: Build"]
        }
    ]
}