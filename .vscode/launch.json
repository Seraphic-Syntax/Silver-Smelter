{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Silver-Smelter",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/silver_smelter",
            "args": [], // <-- The main fix: an empty array, as our code doesn't parse args yet.
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // This line is crucial. It ensures your code is compiled before debugging.
            "preLaunchTask": "CMake: Build"
        }
    ]
}